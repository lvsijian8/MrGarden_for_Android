<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_custom"
    tools:context="com.lvsijian8.flowerpot.ui.activity.AboutActivity">
    <RelativeLayout
        android:background="@color/green_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_about_back"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:src="@drawable/backwhite_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="157dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:background="@null"
            android:src="@drawable/version_logo"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_about_version"
            android:layout_marginTop="4dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="版本:"
            android:textSize="16dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_about__function"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="功能介绍"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <include layout="@layout/line"  />

        <LinearLayout
            android:id="@+id/ll_about_updata"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="检查版本更新"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.lvsijian8.flowerpot.ui.view.TasksCompletedView
        xmlns:lw="http://schemas.android.com/apk/res/com.lvsijian8.flowerpot"
        android:id="@+id/tasks_about"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        lw:radius="25dp"
        lw:strokeWidth="10dp"
        lw:circleColor="@color/circle_color"
        lw:ringColor="@color/ring_color">
    </com.lvsijian8.flowerpot.ui.view.TasksCompletedView>

</LinearLayout>
